<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imgGroupieUploadImage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="125dp"
        android:id="@+id/btnGroupieUploadImage"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="145dp"
            android:id="@+id/txtGroupieTime"
            android:background="@drawable/singlelinetextbox"
            android:hint="Time"
            android:textColorHint="#600E125B"
            android:textCursorDrawable="@null"
            android:paddingStart="5dp"
            android:textColor="@color/primary_darkest"
            android:textSize="14dp"
            android:clickable="true"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="120dp"
            android:id="@+id/txtGroupieLocation"
            android:background="@drawable/singlelinetextbox"
            android:hint="Location"
            android:textColorHint="#600E125B"
            android:textCursorDrawable="@null"
            android:paddingStart="5dp"
            android:textColor="@color/primary_darkest"
            android:textSize="14dp"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="145dp"
            android:id="@+id/txtGroupieDate"
            android:background="@drawable/singlelinetextbox"
            android:hint="Date"
            android:textColorHint="#600E125B"
            android:textCursorDrawable="@null"
            android:paddingStart="5dp"
            android:textColor="@color/primary_darkest"
            android:textSize="14dp"
            android:clickable="true"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="120dp"
            android:id="@+id/txtGroupieName"
            android:background="@drawable/singlelinetextbox"
            android:hint="Name"
            android:textColorHint="#600E125B"
            android:textCursorDrawable="@null"
            android:paddingStart="5dp"
            android:textColor="@color/primary_darkest"
            android:textSize="14dp"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="270dp"
        android:inputType="textMultiLine"
        android:lines="8"
        android:gravity="top|left"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ems="10"
        android:textColor="@color/primary_darkest"
        android:background="@drawable/textbox"
        android:hint="Description"
        android:textColorHint="#600E125B"
        android:textCursorDrawable="@null"
        android:id="@+id/txtGroupieDescription"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="159dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/groupitselector"
        android:background="@android:color/transparent"
        android:layout_below="@+id/txtGroupieDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/btnGroupieGroupIt" />

</RelativeLayout>