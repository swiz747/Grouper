<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/res_image_blue_gradient">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgWelcomeHeader"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fheaderwelcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Grouper Registration"
            android:id="@+id/imgRegisterHeader"
            android:layout_below="@+id/imgWelcomeHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="#0E2165"
            android:textStyle="bold" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:textColor="#0E2165"
            android:ems="10"
            android:id="@+id/edittxtUsername"
            android:layout_marginTop="25dp"
            android:background="@drawable/blackthickbox"
            android:paddingStart="5dp"
            android:layout_below="@+id/imgRegisterHeader"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable="@null"
            android:hint="Username" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textCursorDrawable="@null"
            android:inputType="textPersonName"
            android:textColor="#0E2165"
            android:ems="10"
            android:id="@+id/edittxtEmail"
            android:background="@drawable/blackthickbox"
            android:paddingStart="5dp"
            android:hint="E-mail"
            android:layout_below="@+id/edittxtUsername"
            android:layout_alignStart="@+id/edittxtUsername"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textColor="#0E2165"
            android:ems="10"
            android:id="@+id/edittxtPassword"
            android:hint="Password"
            android:background="@drawable/blackthickbox"
            android:paddingStart="5dp"
            android:layout_below="@+id/edittxtEmail"
            android:layout_alignStart="@+id/edittxtEmail"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textColor="#0E2165"
            android:ems="10"
            android:id="@+id/edittxtPasswordConfirm"
            android:hint="Confirm Password"
            android:background="@drawable/blackthickbox"
            android:paddingStart="5dp"
            android:layout_below="@+id/edittxtPassword"
            android:layout_alignStart="@+id/edittxtPassword"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:text="Agree to Terms of Service"
            android:textColor="#0E2165"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_darker"
            android:layout_below="@+id/edittxtPasswordConfirm"
            android:layout_alignStart="@+id/edittxtPasswordConfirm"
            android:id="@+id/chkAgreetoTOS" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:id="@+id/imgbtnRegister"
            android:layout_marginTop="15sp"
            android:src="@drawable/registerselector"
            android:background="@android:color/transparent"
            android:layout_below="@+id/chkAgreetoTOS"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Already a member? Click here to login!"
            android:id="@+id/txtLogin"
            android:layout_below="@+id/imgbtnRegister"
            android:layout_centerInParent="true"
            android:textColor="#0E2165"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>